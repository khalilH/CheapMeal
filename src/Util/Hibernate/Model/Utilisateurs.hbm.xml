<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Util.Hibernate.Model">
	<class name="Utilisateurs" table="UTILISATEURS">
		<id name="id" type="int" column="id">
			<generator class="increment" />
		</id>
		<property name="mdp" column="mdp" type="string" />
		<property name="login" column="login" type="string" />
		<property name="prenom" column="prenom" type="string" />
		<property name="nom" column="nom" type="string" />
        <property name="mail" column="mail" type="string"/>
	</class>
</hibernate-mapping>